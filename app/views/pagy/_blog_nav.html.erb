<%#
  This template is i18n-ready: if you don't use i18n, then you can replace the
  Pagy::I18n.translate calls with the actual strings ("&lsaquo; Prev", "Next &rsaquo;", "&hellip;").

  The link variable is set to a lambda that returns the link tag.
  Usage: link.call( page_number [, text [, extra_attributes_string ]])
-%>
<% link = pagy.a_lambda('class="btn btn-primary"') -%>

<div class="d-flex justify-content-between flex-row p-3">
  <div class="d">
    <% if pagy.prev -%>
      <%== link.call(pagy.prev, "Newer Posts", 'aria-label="previous"') %>
    <% end %>
  </div>
  <div class="d">
    <% if pagy.next -%>
      <%== link.call(pagy.next, "Older Posts", 'aria-label="next"') %>
    <% end %>
  </div>
</div>